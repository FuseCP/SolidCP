<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0;net48</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>13</LangVersion>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <StartupObject>SolidCP.UniversalInstaller.Program</StartupObject>
        <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
        <ApplicationIcon>Resources\SolidCP.ico</ApplicationIcon>
        <EmbedReferences>true</EmbedReferences>
        <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
        <DefineConstants Condition="$(EmbedReferences) == 'true'">$(DefineConstants);Costura</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DebugType>portable</DebugType>
        <Optimize>false</Optimize>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugType>portable</DebugType>
        <Optimize>false</Optimize>
    </PropertyGroup>

    <ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
        <ProjectReference Include="..\SolidCP.Setup\SolidCP.Setup.csproj" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SolidCP.UniversalInstaller.Core\SolidCP.UniversalInstaller.Core.csproj" />
        <ProjectReference Include="..\SolidCP.UniversalInstaller.Runtime\SolidCP.UniversalInstaller.Runtime.csproj" />
        <ProjectReference Include="..\SolidCP.UniversalInstaller.Runtime\SolidCP.UniversalInstaller.Runtime.csproj">
            <SetTargetFramework>TargetFramework=net8.0</SetTargetFramework>
        </ProjectReference>
        <ProjectReference Include="..\SolidCP.UniversalInstaller.UI.Avalonia\SolidCP.UniversalInstaller.UI.Avalonia.csproj" />
        <ProjectReference Include="..\SolidCP.UniversalInstaller.UI.Console\SolidCP.UniversalInstaller.UI.Console.csproj" />
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net48'">
        <ProjectReference Include="..\SolidCP.UniversalInstaller.UI.WinForms\SolidCP.UniversalInstaller.UI.WinForms.csproj">
            <SetTargetFramework>TargetFramework=net48</SetTargetFramework>
        </ProjectReference>
    </ItemGroup>
    <ItemGroup Condition="$(TargetFramework) == 'net8.0'">
        <ProjectReference Include="..\SolidCP.UniversalInstaller.UI.WinForms\SolidCP.UniversalInstaller.UI.WinForms.csproj">
            <SetTargetFramework>TargetFramework=net8.0-windows</SetTargetFramework>
        </ProjectReference>
        <FrameworkReference Include="Microsoft.WindowsDesktop.App" />
    </ItemGroup>

    <ItemGroup>
        <Compile Include="..\VersionInfo.cs" Link="VersionInfo.cs" />
    </ItemGroup>

    <ItemGroup Condition="$(EmbedReferences) == 'true'">
        <PackageReference Include="CosturaPortable.Fody" Version="6.0.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive; compile</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Fody" Version="6.9.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <None Include="FodyWeavers.xsd" />
        <Compile Include="..\SolidCP.Setup\AssemblyLoader.cs" />
    </ItemGroup>

    <Target Name="DeleteDlls" AfterTargets="Build" Condition="$(EmbedReferences) == 'true'">
        <ItemGroup>
            <DllsToKeep Include="$(OutputPath)\**\Setup2.*" />
            <DllsToKeep Include="$(OutputPath)\**\SolidCP.UniversalInstaller.exe" />
            <DllsToKeep Include="$(OutputPath)\**\SolidCP.UniversalInstaller.dll" />
            <DllsToKeep Include="$(OutputPath)\**\SolidCP.UniversalInstaller.runtimeconfig.json" />
            <DllsToKeep Include="$(OutputPath)\**\SolidCP.UniversalInstaller.pdb" />
            <DllsToKeep Include="$(OutputPath)\**\SolidCP.UniversalInstaller.Core.deps.json" />
            <DllsToDelete Include="$(OutputPath)\**\*.*" Exclude="@(DllsToKeep)" />
        </ItemGroup>
        <Delete Files="@(DllsToDelete)" />
    </Target>

</Project>
