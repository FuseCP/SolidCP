<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net48</TargetFramework>
		<OutputPath>..\SolidCP.Server\bin\SfB2019\</OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<ProduceReferenceAssembly>true</ProduceReferenceAssembly>
		<LangVersion>11</LangVersion>
		<Nullable>disable</Nullable>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
		<DebugType>portable</DebugType>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
		<DebugType>portable</DebugType>
	</PropertyGroup>
	<ItemGroup>
		<Compile Include="..\VersionInfo.cs" Link="VersionInfo.cs" />
	</ItemGroup>
	<ItemGroup>
		<Reference Include="Microsoft.Rtc.Management.Core, Version=7.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, processorArchitecture=MSIL">
			<HintPath>..\..\Lib\References\Microsoft\SfB2019\Microsoft.Rtc.Management.Core.dll</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="Microsoft.Rtc.Management.WritableConfig, Version=7.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, processorArchitecture=MSIL">
			<HintPath>..\..\Lib\References\Microsoft\SfB2019\Microsoft.Rtc.Management.WritableConfig.dll</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="System.DirectoryServices" />
		<Reference Include="System.Management.Automation, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, processorArchitecture=MSIL">
			<HintPath>..\..\Lib\References\Microsoft\Windows2012\System.Management.Automation.dll</HintPath>
			<SpecificVersion>False</SpecificVersion>
		</Reference>
		<Reference Include="System.Web" />
		<Reference Include="System.Data.DataSetExtensions" />
		<Reference Include="Microsoft.CSharp" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\SolidCP.Providers.Base\SolidCP.Providers.Base.csproj" />
		<ProjectReference Include="..\SolidCP.Providers.HostedSolution\SolidCP.Providers.HostedSolution.csproj" />
	</ItemGroup>

    <Target Name="DeleteUnusedDlls" AfterTargets="Build">
        <ItemGroup>
            <FilesToDelete Include="$(OutputPath)System.*" />
            <FilesToDelete Include="$(OutputPath)Renci.*" />
            <FilesToDelete Include="$(OutputPath)Newtonsoft.*" />
            <FilesToDelete Include="$(OutputPath)Standard.*" />
            <FilesToDelete Include="$(OutputPath)BouncyCastle.*" />
            <FilesToDelete Include="$(OutputPath)Microsoft.Bcl.*" />
            <FilesToDelete Include="$(OutputPath)Microsoft.Extensions.*" />
            <FilesToDelete Include="$(OutputPath)Mono.*" />
            <FilesToDelete Include="$(OutputPath)SolidCP.Providers.Base.*" />
            <FilesToDelete Include="$(OutputPath)SolidCP.Server.Utils.*" />
            <FilesToDelete Include="$(OutputPath)SolidCP.Providers.HostedSolution.dll" />
            <FilesToDelete Include="$(OutputPath)SolidCP.Providers.HostedSolution.pdb" />
            <FilesToDelete Include="$(OutputPath)Microsoft.Win32.*" />
        </ItemGroup>
        <Delete Files="@(FilesToDelete)" />
    </Target>

</Project>