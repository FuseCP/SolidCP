<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net48;net8.0</TargetFrameworks>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<LangVersion>11</LangVersion>
		<Nullable>disable</Nullable>
		<OutputPath>..\..\Bin\</OutputPath>
		<AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	</PropertyGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net8.0'">
		<PackageReference Include="CoreWCF.Http" Version="1.7.0" />
		<PackageReference Include="CoreWCF.NetTcp" Version="1.7.0" />
		<PackageReference Include="CoreWCF.Primitives" Version="1.7.0" />
		<PackageReference Include="CoreWCF.NetFramingBase" Version="1.7.0" />
		<PackageReference Include="CoreWCF.WebHttp" Version="1.7.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerUI" Version="9.0.1" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="9.0.6" />
        <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="9.0.6" />
        <PackageReference Include="System.ServiceProcess.ServiceController" Version="9.0.6" GeneratePathProperty="true" />
        <!--
		<ProjectReference Include="..\..\Lib\CoreWCF\src\CoreWCF.Http\src\CoreWCF.Http.csproj" />
		<ProjectReference Include="..\..\Lib\CoreWCF\src\CoreWCF.NetTcp\src\CoreWCF.NetTcp.csproj" />
		<ProjectReference Include="..\..\Lib\CoreWCF\src\CoreWCF.Primitives\src\CoreWCF.Primitives.csproj" />
		-->
		<FrameworkReference Include="Microsoft.AspNetCore.App" Version="2.2.8" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net48'">
		<Reference Include="System.Configuration" />
		<Reference Include="System.ServiceModel" />
		<Reference Include="System.IdentityModel" />
		<Reference Include="System.ServiceModel.Channels" />
		<Reference Include="System.ServiceModel.Web" />
		<Reference Include="System.ServiceModel.Activation" />
		<Reference Include="System.Threading.Tasks" />
		<Reference Include="System.Web" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<!--<PackageReference Include="KornSW.SwaggerWcf" Version="1.2.16.414" />-->
		<Reference Include="SwaggerWcf">
			<HintPath>..\..\Lib\SwaggerWcf.dll</HintPath>
		</Reference>
		<!--<PackageReference Include="Microsoft.Web.Infrastructure" Version="2.0.0" />-->
	</ItemGroup>
	<ItemGroup>
		<Compile Include="..\VersionInfo.cs" Link="VersionInfo.cs" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\SolidCP.Providers.Base\SolidCP.Providers.Base.csproj" />
	</ItemGroup>

    <Target Name="CopyServiceProcessRuntime" AfterTargets="Build"  Condition="'$(TargetFramework)' == 'net8.0'">
        <Message Importance="high" Text="Copying $(PkgSystem_ServiceProcess_ServiceController)\runtimes\win\lib\net8.0\System.ServiceProcess.ServiceController.dll"  />
        <Copy SourceFiles="$(PkgSystem_ServiceProcess_ServiceController)\runtimes\win\lib\net8.0\System.ServiceProcess.ServiceController.dll" DestinationFolder="$(OutputPath)" />
    </Target>

</Project>